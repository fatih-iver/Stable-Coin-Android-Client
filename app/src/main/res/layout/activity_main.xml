<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/balanceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-----"
                android:textSize="32sp"
                android:background="@drawable/std_button"
                android:gravity = "center_horizontal" />

            <TextView
                android:id="@+id/getBalanceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Get Balance"
                android:textColor="@drawable/red_button"
                android:textSize="24sp"
                android:gravity = "center_horizontal" />

            <EditText
                android:id="@+id/idEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:layout_marginTop="3dp"
                android:background="@drawable/std_button"
                android:textSize="24sp"
                android:gravity = "center_horizontal"
                android:hint="your user id..."/>

            <Button
                android:id="@+id/getBalanceButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/std_button"
                android:text="GET"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/transferTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Make Transfer"
                android:textColor="@drawable/red_button"
                android:textSize="24sp"
                android:gravity = "center_horizontal" />

            <EditText
                android:id="@+id/receiverEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:layout_marginTop="3dp"
                android:background="@drawable/std_button"
                android:textSize="24sp"
                android:gravity = "center_horizontal"
                android:hint="receiver id" />

            <EditText
                android:id="@+id/amountEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:layout_marginTop="3dp"
                android:background="@drawable/std_button"
                android:textSize="24sp"
                android:gravity = "center_horizontal"
                android:hint="amount to send.." />

            <Button
                android:id="@+id/makeTransferButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/std_button"
                android:text="TRANSFER"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/withdrawTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Withdraw"
                android:textColor="@drawable/red_button"
                android:textSize="24sp"
                android:gravity = "center_horizontal" />

            <EditText
                android:id="@+id/amountWithdraw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:layout_marginTop="3dp"
                android:background="@drawable/std_button"
                android:textSize="24sp"
                android:gravity = "center_horizontal"
                android:hint="amount to withdraw.." />

            <Button
                android:id="@+id/withdrawButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/std_button"
                android:text="WITHDRAW"
                android:textSize="24sp" />



        </LinearLayout>


</RelativeLayout>